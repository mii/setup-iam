{
    "extends": [
        "config:js-app"
    ],
    "schedule": [
        "every 4 hour after 00:00 and before 23:59 every day"
    ],
    "automergeSchedule": [
        "every 4 hour after 00:00 and before 23:59 every day"
    ],
    "major": {
        "enabled": false
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "@types/node"
            ],
            "allowedVersions": "<21.0.0"
        },
        {
            "matchPackageNames": [
                "esbuild"
            ],
            "allowedVersions": "<0.22"
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "matchPackagePatterns": [
                "eslint"
            ],
            "groupName": "eslint",
            "automerge": true
        }
    ]
}
